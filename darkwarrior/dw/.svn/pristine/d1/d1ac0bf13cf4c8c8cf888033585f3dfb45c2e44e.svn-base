    <script>

        document.onreadystatechange = subSomething;//当页面加载状态改变的时候执行这个方法.
        function subSomething()
        {
            if(document.readyState == "complete")
            {

                $('#loading_div').remove()
            }
            else{
                setTimeout('$("#loading_div").show()',1000);
            }

        }
